<h1> New Camper Form </h1>
<hr>

<% if flash[:errors] %>
    <ul>
    <% flash[:errors].each do |error| %>
    <li> <%= error %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for @camper do |f| %>
<%= f.label :name %>
<br>
<%= f.text_field :name%>
<br>
<br>
<%= f.label :age %>
<br>
<%= f.number_field :age%>
<br>
<br>
<%= f.submit %>
<% end%>